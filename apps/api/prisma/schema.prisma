generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String?   @unique
  password  String?           // Null for OAuth-only, set for demo/anon
  name      String?
  provider  String?           // e.g., github, demo, google
  tier      Tier      @default(FREE)
  projects  Project[]
  createdAt DateTime  @default(now())
  isDemo    Boolean   @default(false)  // for demo accounts
}

model Project {
  id         String     @id @default(uuid())
  name       String
  slug       String
  user       User       @relation(fields: [userId], references: [id])
  userId     String
  components Component[]
  theme      Json?
  isPublic   Boolean    @default(false)
  createdAt  DateTime   @default(now())
}

model Component {
  id        String   @id @default(uuid())
  name      String
  code      String   // TSX/JSX code
  meta      Json?
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Tier {
  DEMO
  FREE
  PRO
  TEAM
}

model RateLimit {
  id          String   @id @default(uuid())
  userId      String?
  ip          String?
  type        String   // e.g., "component-generate", "ai-request"
  windowStart DateTime
  count       Int      @default(1)
}
